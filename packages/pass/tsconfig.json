{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"forceConsistentCasingInFileNames": true,
		"target": "esnext",
		"module": "NodeNext",
		"moduleResolution": "nodenext", // change from "Bundler" to "node16"
		"outDir": "./dist",
		"strict": true,
		"skipLibCheck": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"inlineSources": true,
		"allowSyntheticDefaultImports": true
	},
	"include": ["src/**/*"],
	"exclude": ["src/**/*.test.ts"]
}
