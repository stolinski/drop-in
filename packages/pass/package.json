{
	"name": "@drop-in/pass",
	"version": "0.1.0",
	"description": "Your drop-in season pass. aka Auth",
	"main": "dist/index.js",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		},
		"./client": {
			"types": "./dist/client/index.d.ts",
			"default": "./dist/client/index.js"
		},
		"./schema": {
			"types": "./dist/schema.d.ts",
			"default": "./dist/schema.js"
		},
		"./routes": {
			"types": "./dist/routes.d.ts",
			"default": "./dist/routes.js"
		}
	},
	"files": [
		"dist/"
	],
	"scripts": {
		"dev": "tsc --watch",
		"test": "vitest --run",
		"test:watch": "vitest",
		"prepublish": "tsc",
		"build": "tsc",
		"package": "tsc",
		"ebuild": "esbuild src/index.ts --bundle --platform=node --format=esm --outdir=dist --external:pg --external:crypto --external:bcryptjs --external:fs --external:path --external:os --external:util --external:events"
	},
	"author": "Scott Tolinski",
	"license": "ISC",
	"publishConfig": {
		"access": "public"
	},
	"dependencies": {
		"@drop-in/beeper": "workspace:^",
		"bcryptjs": "^3.0.2",
		"drizzle-orm": "^0.43.1",
		"jose": "^6.0.10",
		"js-cookie": "^3.0.5",
		"jsonwebtoken": "^9.0.2",
		"nanoid": "^5.1.5",
		"parse-nested-form-data": "^1.0.0",
		"pg": "^8.15.6",
		"postgres": "^3.4.5",
		"typescript": "^5.8.3"
	},
	"devDependencies": {
		"@sveltejs/kit": "^2.20.7",
		"@types/bcrypt": "^5.0.2",
		"@types/bcryptjs": "^3.0.0",
		"@types/js-cookie": "^3.0.6",
		"@types/jsonwebtoken": "^9.0.9",
		"@types/pg": "^8.11.14",
		"vitest": "^3.2.4"
	}
}
